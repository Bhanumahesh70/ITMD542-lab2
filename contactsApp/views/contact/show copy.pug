extends layout

block content
  h1 Contact Details
  p
    strong First Name:
    | #{contact.firstName}
  p
    strong Last Name:
    | #{contact.lastName}
  p
    strong Email Address:
    | #{contact.email}
  p
    strong Notes:
    | #{contact.notes}
  p
    strong Date Created/Modified:
    | #{contact.date}
  a(href=`/contacts/${contact.id}/edit`) Edit Contact
  form(action=`/contacts/${contact.id}?_method=DELETE`, method='POST')
    button(type='submit') Delete Contact
    a(href=`/contacts`) View All Contacts
